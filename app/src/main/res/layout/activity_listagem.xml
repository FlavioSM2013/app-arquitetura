<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- LinearLayout interno para o conteúdo rolável -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo_barbara"
            android:layout_marginTop="36dp" />

        <!-- Título da lista de projetos -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de projetos:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center_horizontal" />

        <!-- Barra de busca e botão de filtro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar projetos"
                android:inputType="text"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/filterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtros" />

        </LinearLayout>

        <!-- CardView para projetos -->
        <!-- Primeiro CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:padding="16dp">

            <!-- Conteúdo do CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nome do Projeto -->
                <TextView
                    android:id="@+id/projectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Projeto 01"
                    android:textColor="#000000"/>

                <!-- Status -->
                <TextView
                    android:id="@+id/projectStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Em andamento"
                    android:layout_marginTop="4dp"
                    android:textColor="#FF5722"/>

                <!-- Proprietário -->
                <TextView
                    android:id="@+id/projectOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:text="Ricardo Alves"
                    android:textColor="#607D8B"/>

                <!-- Descrição -->
                <TextView
                    android:id="@+id/projectDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:text="Escritório de advocacia especializado em casos trabalhistas"
                    android:textColor="#757575"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Segundo CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:padding="16dp">

            <!-- Conteúdo do CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nome do Projeto -->
                <TextView
                    android:id="@+id/projectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Projeto 02"
                    android:textColor="#000000"/>

                <!-- Status -->
                <TextView
                    android:id="@+id/projectStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Concluído"
                    android:layout_marginTop="4dp"
                    android:textColor="#4CAF50"/>

                <!-- Proprietário -->
                <TextView
                    android:id="@+id/projectOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:text="Ana Costa"
                    android:textColor="#607D8B"/>

                <!-- Descrição -->
                <TextView
                    android:id="@+id/projectDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:text="Desenvolvimento de um novo sistema de CRM"
                    android:textColor="#757575"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Terceiro CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:padding="16dp">

            <!-- Conteúdo do CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nome do Projeto -->
                <TextView
                    android:id="@+id/projectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Projeto 03"
                    android:textColor="#000000"/>

                <!-- Status -->
                <TextView
                    android:id="@+id/projectStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Pendente"
                    android:layout_marginTop="4dp"
                    android:textColor="#FFC107"/>

                <!-- Proprietário -->
                <TextView
                    android:id="@+id/projectOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:text="Lucas Lima"
                    android:textColor="#607D8B"/>

                <!-- Descrição -->
                <TextView
                    android:id="@+id/projectDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:text="Implementação de novas funcionalidades no app móvel"
                    android:textColor="#757575"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Você pode adicionar mais CardView aqui -->

    </LinearLayout>

</ScrollView>
